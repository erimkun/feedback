// PostgreSQL datasource - using DATABASE_URL from environment
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Feedback {
  id         String   @id // UUID
  target_name String   // Who is the feedback for?
  phone      String?  // Phone number
  office     String?  // Merkez, Ünalan, Bahçelievler, Yavuztürk
  rating     Int?     // 1-5 range, nullable initially
  comment    String?  // Optional comment
  is_used     Boolean  @default(false)
  created_at  DateTime @default(now())
  @@map("kentas_anket")
}
